{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "es2020",
		"module": "es2020",
		// Don't emit; allow Babel to transform files
		"noEmit": true,
		// Disallow features that require cross-file information for emit
		"isolatedModules": true
	},
	"include": ["src/**/*"]
}
